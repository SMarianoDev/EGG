Algoritmo distancia
	
	Definir valorUsuario Como real
	Definir centimetros, milimetros, pulgadas Como Real
	
	Escribir "Ingrese su valor en metros"
	Leer valorUsuario
	
	centimetros = valorUsuario*100
	Escribir "su valor en centimetros es: " , centimetros " centimetros"
	
	milimetros = valorUsuario*1000
	Escribir "Su valor en milimetros es: " , milimetros " milimetros"
	
	pulgadas = centimetros/2.54
	Escribir "su valor en pulgadas es: " , pulgadas " pulgadas"
	
FinAlgoritmo
